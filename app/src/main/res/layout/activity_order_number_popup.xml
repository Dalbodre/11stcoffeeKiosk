<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="900px"
    android:layout_height="1200px"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".OrderNumberPopupActivity">

    <RelativeLayout
        android:id="@+id/last_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#081832">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20px"
            android:text="결제완료"
            android:textColor="#ffffff"
            android:textSize="50px"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_top_title"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="결제가 완료되었습니다."
        android:textStyle="bold"
        android:textColor="#081832"
        android:textSize="60px" />

    <TextView
        android:layout_marginTop="30px"
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="40px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text3"
        android:layout_margin="40px"
        android:background="@drawable/last_order_background">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#4b3621"
            android:textStyle="bold"
            android:textSize="80px" />
    </RelativeLayout>
</RelativeLayout>