<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="700dp"
    android:layout_height="1000dp"
    android:background="#F8ECCA"
    android:orientation="vertical"
    tools:context=".OrderNumberPopupActivity">

    <RelativeLayout
        android:id="@+id/last_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#BDB69F">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:text="결재완료"
            android:textColor="#4b3621"
            android:textSize="50dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_top_title"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="결재가 완료되었습니다."
        android:textStyle="bold"
        android:textColor="#4b3621"
        android:textSize="60sp" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text3"
        android:layout_margin="40dp"
        android:background="@drawable/last_order_background">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#4b3621"
            android:textStyle="bold"
            android:textSize="80sp" />
    </RelativeLayout>
</RelativeLayout>