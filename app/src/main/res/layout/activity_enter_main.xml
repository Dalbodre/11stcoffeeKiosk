<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a1527"
    tools:context=".EnterMain">

    <ImageView
        android:id="@+id/enter_easter"
        android:layout_width="700px"
        android:layout_height="700px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/coffee_in_main_enterance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/credit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:paddingTop="25dp"
        android:text="제작자"
        android:textColor="#ffffff"
        android:gravity="right"
        android:textSize="45sp"
        />

    <TextView
        android:id="@+id/splash_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_easter"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="130dp"
        android:text="카운터에서도\n주문 가능합니다."
        android:textAlignment="center"
        android:textColor="#fec93d"
        android:textSize="75sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_easter" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/enter_main_bottomstyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_title">

        <Button
            android:id="@+id/btnTakeout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginVertical="80dp"
            android:layout_marginStart="50pt"
            android:layout_marginEnd="35pt"
            android:background="@drawable/orderbutton"
            android:drawableTop="@drawable/enter_main_takeout_size"
            android:elevation="2dp"
            android:gravity="center"
            android:onClick="buttonClicked"
            android:paddingVertical="120dp"
            android:text="포장"
            android:textColor="#00276b"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnInCoffee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!--            <LinearLayout-->
            <!--                android:orientation="vertical"-->
            <!--                android:gravity="center_horizontal"-->
            <!--                >-->
            <!--                <View-->
            <!--                    android:layout_width="60pt"-->
            <!--                    android:layout_height="54.9pt"-->
            <!--                    android:background="#000000"-->
            <!--                    />-->
            <!--            </LinearLayout>-->
        </Button>

        <Button
            android:id="@+id/btnInCoffee"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginVertical="80dp"
            android:layout_marginEnd="50pt"
            android:background="@drawable/orderbutton"
            android:drawableTop="@drawable/enter_main_no_takeout_size"
            android:elevation="2dp"
            android:onClick="buttonClicked"
            android:paddingVertical="120dp"
            android:text="매장"
            android:textColor="#00276b"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnTakeout"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



<!--    <View-->
<!--        android:id="@+id/employee_easter"-->
<!--        android:layout_width="200px"-->
<!--        android:layout_height="300px"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:background="#ffffff"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="정상 운영중입니다."
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/enter_easter"
        android:layout_centerHorizontal="true"
        android:alpha="0.8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
