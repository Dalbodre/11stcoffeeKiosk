<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enter_main_normal"
    tools:context=".EnterMain">

    <ImageButton
        android:id="@+id/enter_main_button"
        android:layout_centerHorizontal="true"
        android:layout_width="680px"
        android:layout_height="240px"
        android:layout_marginTop="400px"
        android:background="@drawable/enter_main_button"
        android:onClick="buttonClicked"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="베타테스트 작업 중..."
        android:textSize="100px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/hotRed"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alertTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/server_not_reachable"
        android:textSize="100px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/hotRed"
        android:textAlignment="center"
        android:visibility="gone"
        android:textStyle="bold" />

    <View
        android:layout_width="200px"
        android:layout_height="450px"
        android:id="@+id/enter_easter"
        android:layout_below="@id/enter_main_button"
        android:layout_marginTop="610px"
        android:layout_marginStart="740px"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:alpha="0.8"
        android:visibility="gone"
        android:layout_below="@+id/enter_main_button"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
