<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fef1d1">

    <sb.yoon.kiosk.layout.ItemElement
        android:id="@+id/menu_element"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:width="130dp"
        android:gravity="center_horizontal"
        android:text="20000"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="21sp"
        app:drawableLeftCompat="@drawable/textview_drawable_left_ice"
        app:layout_constraintBottom_toTopOf="@+id/price2"
        app:layout_constraintStart_toEndOf="@+id/menu_element"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/textview_drawable_left_ice" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:width="130dp"
        android:gravity="center_horizontal"
        android:text="16000"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="21sp"
        app:drawableLeftCompat="@drawable/textview_drawable_left_hot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/price1"
        app:layout_constraintTop_toBottomOf="@id/price1"
        app:drawableStartCompat="@drawable/textview_drawable_left_hot" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/price1"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ingredientsHolder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <sb.yoon.kiosk.layout.ItemElement
                android:id="@+id/ingredient1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone">
            </sb.yoon.kiosk.layout.ItemElement>

            <sb.yoon.kiosk.layout.ItemElement
                android:id="@+id/ingredient2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone">
            </sb.yoon.kiosk.layout.ItemElement>

            <sb.yoon.kiosk.layout.ItemElement
                android:id="@+id/ingredient3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"/>

            <sb.yoon.kiosk.layout.ItemElement
                android:id="@+id/ingredient4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"/>

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
