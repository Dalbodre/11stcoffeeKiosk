<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_plain"
    android:descendantFocusability="blocksDescendants"
    android:padding="15dp">


    <sb.yoon.kiosk.layout.ItemElement
        android:id="@+id/menu_element"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/InfoLayout"/>

    <LinearLayout
        android:id="@+id/InfoLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/menu_element"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴이름"
            android:textSize="35sp"
            android:textColor="#151515"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/menu_hot_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_hot"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/menu_hot_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예시금액"
                android:textColor="#b10303"
                android:layout_marginRight="15dp"
                android:textSize="28dp"/>

            <ImageView
                android:id="@+id/menu_ice_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_ice"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/menu_ice_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예시금액"
                android:textSize="28dp"
                android:textColor="#00276b"/>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/ingredientScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ingredientsHolder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10px"
                android:orientation="horizontal">

                <sb.yoon.kiosk.layout.IngredientItem
                    android:id="@+id/ingredient1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    android:layout_marginEnd="10dp"/>

                <sb.yoon.kiosk.layout.IngredientItem
                    android:id="@+id/ingredient2"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    android:layout_marginEnd="10dp"/>

                <sb.yoon.kiosk.layout.IngredientItem
                    android:id="@+id/ingredient3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    android:layout_marginEnd="10dp"/>

                <sb.yoon.kiosk.layout.IngredientItem
                    android:id="@+id/ingredient4"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    />


            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
