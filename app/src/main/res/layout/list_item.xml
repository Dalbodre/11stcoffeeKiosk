<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <sb.yoon.kiosk.layout.ItemElement
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/menu_element"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"/>

    <TextView
            android:text="20000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price1"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/menu_element"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="21sp"
            android:textColor="@android:color/black"
            android:width="130dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>

    <TextView
            android:text="16000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price2"
            app:layout_constraintStart_toStartOf="@+id/price1"
            app:layout_constraintTop_toBottomOf="@id/price1"
            android:textSize="21sp"
            android:textColor="@android:color/black"
            android:width="130dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>

    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/price1"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ingredientsHolder"
                android:orientation="horizontal"/>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
