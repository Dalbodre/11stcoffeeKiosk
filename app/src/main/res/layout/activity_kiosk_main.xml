<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbe49e"
    android:orientation="vertical"
    tools:context=".KioskListActivity">

    <LinearLayout
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints"
        >
        <Button
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="category_select"
            android:enabled="true"
            android:text="◀"
            android:background="@android:color/white"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
            />

        <GridLayout
            android:id="@+id/category_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="4"
            android:background="#FFFFFF"
            android:gravity="center"
            />

        <Button
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="category_select"
            android:enabled="true"
            android:text="▶"

            android:background="@android:color/white"
            android:layout_marginRight="20dp"
            android:textSize="30dp"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/list_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cart_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categories"></FrameLayout>

    <LinearLayout
        android:id="@+id/cart_buttons"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/cart_recycler_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_fragment">

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#C8C8C8"
            android:gravity="center"
            android:text="0 원"
            android:textColor="@color/coffeeBrown"
            android:textSize="70dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/purchase_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/coffeeBrown"
            android:text="계산"
            android:textColor="@android:color/white"
            android:textSize="60dp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart_buttons" />

</androidx.constraintlayout.widget.ConstraintLayout>